<div class="products__categories_container">
  <label for="products__categories">Categor&iacute;a:</label>
  <select id='products__categories' onchange='loadProducts()'>
    <option  value=''>Todas</option>
    {{#each categories}}
      <option value='{{this.value}}'{{#if this.selected}}selected{{/if}}>{{this.value}}</option>
    {{/each}}
</select>
</div>

{{#if hasProducts}}
  <table class='products__table' border='solid'>
    <tr>
      <th>Imagen</th>
      <th>Categor&iacute;a</th>
      <th>Nombre</th>
      <th>Descripci&oacute;n</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Agregar</th>
    </tr>
    {{#each products}}
      <tr>
        <td>
          <a href="/productos/{{this._id}}">

          <img
            src='{{this.picture}}'
            alt='{{this.name}}'
            style='height: auto; width: 100px;'
          />
          </a>
          </td>
        <td>{{this.category}}</td>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>${{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>
          {{#if this.hasStock}}
            <button onclick="addProductToCart('{{this._id}}', 1);" > Agregar </button>
          {{else}}
            Sin stock.
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </table>
{{else}}
  <div class='products__no_products'>There are no products.</div>
{{/if}}