<div class='product__container'>
  <h2>{{this.name}}</h2>
  <img src='{{picture}}' alt='{{name}}' style='height: auto; width: 200px' />
  <div class='product__name'>
    {{name}}
  </div>
  <p>
    {{description}}
  </p>
  <p>
    Stock:
    <b>{{stock}}</b>
  </p>
  <p>
    Cantidad comprada:
    <input
      id='product__count_to_buy'
      type='number'
      min='0'
      max='{{stock}}'
      value='{{count}}'
      placeholder='Cantidad'
    />
  </p>
  <button onclick="setProductCount('{{this._id}}')">Agregar al carrito</button>
</div>
